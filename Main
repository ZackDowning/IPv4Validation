# Prompts for user to input IP Address
uip = input('Example: 172.16.3.25\n'
            'Enter IP Address: ')

# Checking if IP Address formatting is valid and waiting for valid input

# Checks number of periods in 'uip'. If not 3, then will ask for IP address again
while uip.count('.').__lt__(3) or uip.count('.').__gt__(3):
    print('Invalid IP Address. Not enough octets.')
    uip = input('Enter Host IP Address: ')

x = uip.split('.', 4)
y = False
while y is False:
    try:

        # Checks all IP address octets as integers to make sure they are not greater than 255
        # If one is greater than 255, then which number octet is.

        while int(x[0]) > 255 or int(x[1]) > 255 or int(x[2]) > 255 or int(x[3]) > 255:
            print('Invalid IP Address.')
            for num in range(0, 4):
                if int(x[num]) > 255:
                    print(f'Octet #{num + 1} is greater than 255. Valid octet range is 0 - 255.')
            uip = input('Enter Host IP Address: ')
            x = uip.split('.', 4)
        else:
            y = True

    # If octets contain anything anything aside from an integer, print that octets must contain values 0 - 255

    except ValueError:
        y = False
        print('Value Error. Octets must only contain values 0 - 255.')
        uip = input('Enter Host IP Address: ')
        x = uip.split('.', 4)
